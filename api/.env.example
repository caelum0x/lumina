# Lumina 3D Modern Stellar Explorer - API Server Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000
NODE_ENV=development
MODE=development

# MongoDB Configuration
# Main database connection (per network, see app.config.json for full config)
MONGODB_URI=mongodb://127.0.0.1:27087/se_pub802
MONGODB_ARCHIVE_URI=mongodb://127.0.0.1:40217/se_archive

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9201

# Stellar Horizon API
HORIZON_URL_PUBLIC=https://horizon.stellar.org
HORIZON_URL_TESTNET=https://horizon-testnet.stellar.org

# API Cache
API_CACHE_DISABLED=false

# CORS Configuration
CORS_WHITELIST=http://localhost:3000,http://localhost:9001

# Directory Configuration (GitHub)
DIRECTORY_REPO_OWNER=your-org
DIRECTORY_REPO_NAME=your-repo
DIRECTORY_ACCESS_TOKEN=your_github_token
DIRECTORY_ADMINS=username1,username2

# OAuth Configuration
GITHUB_OAUTH_CLIENT_ID=your_client_id
GITHUB_OAUTH_SECRET=your_client_secret

# Billing Configuration
BILLING_SERVER_URL=ws://127.0.0.1:9000
BILLING_SERVICE_TOKEN=your_service_token

# Security
PROXY_VALIDATION_KEY=your_proxy_validation_key
TURNSTILE_SECRET=your_turnstile_secret

# Feature Flags
ENABLE_3D_STREAM=true
ENABLE_SSE_STREAMING=true
